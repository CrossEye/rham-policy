\define markerRegex() .*\(([^\(\)]+)\)$

\procedure heading2()
  <div class={{!!section-type}}>
    <h2><$link>{{!!caption}}</$link></h2>
    <$transclude $mode="block"/>
  </div>
\end heading2

\procedure heading3-upper()
