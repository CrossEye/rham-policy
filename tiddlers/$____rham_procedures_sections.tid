    <h3 class="upper"><$link>{{!!caption}}</$link></h3>
    <$transclude $mode="block"/>
  </div>
\end heading3-upper

\procedure outline()
  <div class="level">
    <div class="heading"><$link><% if [<marker>] %><<marker>>. <% endif %>{{!!caption}}</$link></div>
    <$transclude $mode="block"/>
  </div>
\end

\procedure old-plain()
  <div class="level">
    <div class="heading"><$link>{{!!caption}}</$link></div>
